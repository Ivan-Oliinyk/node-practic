<h1>Мои заказы</h1>

{{#if order.length}}
  {{#each order}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="cart-title">Заказ <small>{{_id}}</small></span>
            <p class="date">Дата {{date}}</p>
            <p><em>{{user.name}}</em> ({{user.userId.email}})</p>
            <ol>
              {{#each courses}}
                <li>
                  {{course.title}}
                  x (<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>
            <hr />
            <p class="price-descr">Цена:
              <span class="price">
                {{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Заказов пока нету</p>
{{/if}}